<div class="container">
<div class='row'>
<h2 class="mt-3">New book</h2>
<%= form_with model: @book,url:'/books',method: :post, local:true do |f| %>
 <div class="form-group">
   <label for="book_title">Title</label>
   </div>
   <div class="form-group">
   <%= f.text_field :title %>
 </div>
 <div class="form-group">
   <label for="book_body">Opinion</label>
   </div>
   <div class="form-group">
   <%= f.text_area :body %>
 </div>
 <div class="form-group">
   <%= f.submit 'Create Book' %>
   <% end %>
 </div>
 </div>
 </div>